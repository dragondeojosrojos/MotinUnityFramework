 <!-- V14 STYLES!! -->

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="OKActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/OKActionBarStyle</item>
    </style>

    <style name="OKActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showTitle|homeAsUp</item>
        <item name="android:background">@color/io_openkit_actionBarBgColor</item>
    </style>

    <style name="OKLoginText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="OKHeadingText" parent="@style/OKLoginText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OKSmallLightGrayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/io_openkit_gray</item>
        <item name="android:typeface">sans</item>
    </style>

  <style name="Theme.Transparent" parent="OKActivityTheme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
    
   
</resources>